@model List<Comentario>

@{
    ViewData["Title"] = "Comentarios";

}


@if(Model.Count() == 0){
    <p class="text-center">No tenemos comentarios que mostrar</p>
}else{
    <div class="row">
        @foreach(var c in Model){
            <div class="col-12 text-center" Style="border-style: double;">
                <h2>@c.Coments</h2>
                <br>
                <br>
            </div>
            
        }
    </div>
}
