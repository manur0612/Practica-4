@model List<Fail>

@{
    ViewData["Title"] = "Perú Fail";
}

@if(Model.Count() == 0){
    <p class="text-center">No tenemos memes que mostrar, sigue intentando</p>
}else{
    <div class="row">
        @foreach(var fail in Model){
            <div class="col-12 text-center" Style="border-style: double;">
                <a asp-action="Comentario" asp-route-id="@fail.ID"><h2>@fail.Titulo</h2></a>
                <p>@fail.UserID</p>
                <a asp-action="Comentario" asp-route-id="@fail.ID"><img src="@fail.Foto" class="img-thumbnail" style="max-width: 500px;max-height:300px;"></a>
                <br>
                <br>
            </div>
            
        }
    </div>
}
